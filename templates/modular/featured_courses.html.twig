<h2>{{ page.header.title }}</h2>

  {% set base_url = page.parent.url %}

  {% block content %}

    {{ page.content }}

    {% for post in taxonomy.findTaxonomy({'category':'course','tag':'featured'}) %}
        <h3><a href="{{ base_url }}/{{ post.slug }}">{{ post.title }}</a></h3>
        <p>{{ post.summary }} <a class="button" href="{{ base_url }}/{{ post.slug }}">Read more</a></p>
    {% endfor %}

  {% endblock %}